<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_btn"
    android:clickable="true"
    android:layout_marginTop="@dimen/x10"
    android:layout_marginRight="@dimen/x10"
    android:layout_marginLeft="@dimen/x10"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ll_btn_square"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="@dimen/x100"
        android:layout_height="@dimen/x100"
        android:layout_marginBottom="@dimen/x10"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginTop="@dimen/x10"
        android:background="#FFEDC8">

        <ImageView
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x40"
            android:background="@drawable/icon_coupon" />

        <TextView
            android:id="@+id/tv_min_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="满￥9.00"
            android:textColor="@color/black" />
    </RelativeLayout>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">
    <ImageView
        android:layout_marginRight="@dimen/x10"
        android:layout_marginBottom="@dimen/x10"
        android:layout_marginTop="@dimen/x10"
        android:background="@drawable/coupon_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <TextView
        android:id="@+id/tv_coupon_title"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginTop="@dimen/x30"
        android:textStyle="bold"
        android:textColor="@color/coupon_color"
        android:text="8元优惠券"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
      <TextView
          android:id="@+id/tv_title_info"
          android:layout_marginTop="@dimen/x5"
          android:textColor="@color/coupon_color"
          android:textSize="11sp"
          android:layout_below="@id/tv_coupon_title"
          android:layout_marginLeft="@dimen/x20"
          android:text="满9.00元可用"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
      <TextView
          android:id="@+id/tv_coupon_time"
          android:layout_marginTop="@dimen/x5"
          android:layout_marginLeft="@dimen/x20"
          android:textSize="11sp"
          android:layout_below="@id/tv_title_info"
          android:textColor="@color/coupon_color"
          android:text="2018年9月13日 19:20:15"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
  </RelativeLayout>

</LinearLayout>