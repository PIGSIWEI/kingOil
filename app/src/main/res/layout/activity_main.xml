<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <include
        android:id="@+id/include_title"
        layout="@layout/main_title_layout"></include>
    <ImageView
        android:id="@+id/include_title_line"
        android:layout_below="@id/include_title"
        android:background="@color/line_color"
        android:layout_width="match_parent"
        android:layout_height="0.7dp" />
    <com.baidu.mapapi.map.MapView
        android:layout_below="@id/include_title_line"
        android:id="@+id/bmapView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true" />
    <Button
        android:id="@+id/btn_get_nearby"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:text="一键加油"
        android:background="@drawable/btn_oil_circle"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true"
        android:layout_width="140dp"
        android:layout_height="40dp" />
    <Button
        android:layout_marginRight="5dp"
        android:id="@+id/btn_location"
        android:layout_marginBottom="100dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/icon_btn_location2"
        android:layout_width="40dp"
        android:layout_height="40dp" />
</RelativeLayout>