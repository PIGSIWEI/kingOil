<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:visibility="invisible"
                android:id="@+id/iv_back"
                android:layout_marginBottom="@dimen/x10"
                android:layout_marginTop="@dimen/x10"
                android:layout_marginLeft="@dimen/x10"
                android:background="@drawable/icon_back"
                android:layout_width="@dimen/x25"
                android:layout_height="@dimen/x25" />

            <TextView
                android:layout_centerVertical="true"
                android:textSize="17sp"
                android:id="@+id/tv_titile"
                android:layout_centerHorizontal="true"
                android:text="标题"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x30"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/x3"
        android:lineSpacingMultiplier="1.2"
        android:padding="@dimen/x10"
        android:text="@string/face_verify_tips"
        android:textColor="#3d3d3d"
        android:textSize="18sp" />
    <ImageView
        android:layout_width="@dimen/x150"
        android:layout_height="@dimen/x150"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/x25"
        android:background="@drawable/photo_face_intro" />
    <Button
        android:id="@+id/btn_face_register"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginTop="@dimen/x46"
        android:background="@drawable/complete_btn_selector"
        android:padding="@dimen/x5"
        android:text="更新人脸"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>