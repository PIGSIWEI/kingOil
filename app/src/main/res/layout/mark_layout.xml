<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginBottom="@dimen/x10"
            android:layout_marginTop="@dimen/x10"
            android:layout_marginLeft="@dimen/x20"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/x50" />
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_oil_name"
                android:textSize="17sp"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginTop="@dimen/x10"
                android:textColor="@color/black"
                android:text="name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:background="@drawable/icon_wx"
                android:id="@+id/iv_wx_pay"
                android:layout_marginTop="@dimen/x7"
                android:layout_below="@id/tv_oil_name"
                android:layout_marginLeft="@dimen/x10"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20" />
            <ImageView
                android:background="@drawable/icon_ali"
                android:layout_toRightOf="@id/iv_wx_pay"
                android:layout_marginTop="@dimen/x7"
                android:layout_below="@id/tv_oil_name"
                android:layout_marginLeft="@dimen/x5"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20" />
            <Button
                android:id="@+id/btn_daohang"
                android:layout_marginRight="@dimen/x20"
                android:layout_marginTop="@dimen/x10"
                android:layout_alignParentRight="true"
                android:textColor="@color/title_color"
                android:text="导航"
                android:background="@drawable/btn_daohang_circle"
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/x30" />
            <TextView
                android:layout_marginTop="@dimen/x5"
                android:layout_marginRight="@dimen/x30"
                android:layout_alignParentRight="true"
                android:text="distans"
                android:layout_below="@id/btn_daohang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>