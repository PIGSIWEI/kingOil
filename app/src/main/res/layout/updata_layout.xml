<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/activty_backgroud"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/activity_title_include">

    </include>

    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="13sp"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginBottom="@dimen/x10"
                android:layout_marginTop="@dimen/x10"
                android:layout_weight="1"
                android:text="@string/choose_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginLeft="@dimen/x10"
                android:layout_gravity="center"
                android:background="@drawable/icon_right"
                android:layout_width="@dimen/x15"
                android:layout_height="@dimen/x15" />
            <TextView
                android:textSize="13sp"

                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/x10"
                android:layout_weight="1"
                android:text="@string/input_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginLeft="@dimen/x10"
                android:layout_gravity="center"
                android:background="@drawable/icon_right"
                android:layout_width="@dimen/x15"
                android:layout_height="@dimen/x15" />
            <TextView
                android:textSize="13sp"
                android:textColor="@color/title_color"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/x10"
                android:layout_marginLeft="@dimen/x10"
                android:layout_weight="1"
                android:text="@string/upload_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_gravity="center"
                android:background="@drawable/icon_right_green"
                android:layout_width="@dimen/x15"
                android:layout_height="@dimen/x15" />
            <TextView
                android:textSize="13sp"

                android:layout_gravity="center"
                android:layout_marginRight="@dimen/x10"
                android:layout_marginLeft="@dimen/x10"
                android:layout_weight="1"
                android:text="@string/confirm_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:background="@color/line_color"
            android:layout_width="match_parent"
            android:layout_height="0.7dp" />

      <RelativeLayout
          android:id="@+id/rl_bg"
          android:layout_marginBottom="@dimen/x190"
          android:layout_marginTop="@dimen/x20"
          android:layout_marginRight="@dimen/x20"
          android:layout_marginLeft="@dimen/x20"
          android:background="@color/white"
          android:layout_width="match_parent"
          android:layout_height="match_parent">
          <LinearLayout
              android:id="@+id/ll_upload"
              android:layout_centerInParent="true"
              android:clickable="true"
              android:background="@drawable/btn_oil_circle"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
              <ImageView
                  android:layout_gravity="center"
                  android:layout_marginBottom="@dimen/x10"
                  android:layout_marginTop="@dimen/x10"
                  android:layout_marginLeft="@dimen/x10"
                  android:background="@drawable/icon_upload"
                  android:layout_width="@dimen/x25"
                  android:layout_height="@dimen/x25" />
              <TextView
                  android:layout_marginRight="@dimen/x10"
                  android:layout_marginLeft="@dimen/x10"
                  android:textSize="17sp"
                  android:layout_gravity="center"
                  android:textColor="@color/white"
                  android:text="@string/click_upload"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />
          </LinearLayout>
          <TextView
              android:layout_marginTop="@dimen/x10"
              android:layout_centerHorizontal="true"
              android:layout_below="@id/ll_upload"
              android:textSize="11sp"
              android:textColor="@color/title_color"
              android:text="上传图片的大小不超过2M"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          <ImageView
              android:scaleType="fitXY"
              android:id="@+id/iv_bg"
              android:layout_width="match_parent"
              android:layout_height="match_parent" />
      </RelativeLayout>


    </LinearLayout>


    
</LinearLayout>