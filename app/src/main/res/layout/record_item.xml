<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tv_oil_name"
        android:layout_marginBottom="@dimen/x5"
        android:layout_marginTop="@dimen/x10"
        android:layout_marginLeft="@dimen/x10"
        android:text="oil_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_oil_time"
        android:textSize="11sp"
        android:layout_marginBottom="@dimen/x10"
        android:layout_marginLeft="@dimen/x10"
        android:text="oil_time"
        android:layout_below="@id/tv_oil_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_oil_coupon"
        android:textSize="16sp"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginTop="@dimen/x10"
        android:layout_alignParentRight="true"
        android:textColor="@color/red"
        android:text="节省￥0.00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_oil_real_pay"
        android:textSize="11sp"
        android:layout_marginTop="@dimen/x3"
        android:layout_marginRight="@dimen/x20"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_oil_coupon"
        android:text="real_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
    <ImageView
        android:background="@color/line_color"
        android:layout_width="match_parent"
        android:layout_height="0.7dp" />
</LinearLayout>
